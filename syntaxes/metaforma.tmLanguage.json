{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MetaForma",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.metaforma",
          "begin": "@@",
          "end": "\n"
        },
        {
          "name": "comment.block.metaforma",
          "begin": "@\\[",
          "end": "@\\]"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.metaforma",
          "match": "(?<!@)\\b(break|case|catch|do|else|finally|for|if|loop|next|return|switch|try|unless|while|yield)\\b"
        },
        {
          "name": "storage.type.metaforma",
          "match": "(?<!@)\\b(interface|let|struct)\\b"
        },
        {
          "match": "(?<!@)\\b(function|record)\\s*\\((.*)\\)",
          "captures": {
            "1": {
              "name": "storage.type.function.metaforma"
            },
            "2": {
              "patterns": [
                {
                  "match": "((?:@|\\b)[a-zA-Z_][a-zA-Z0-9_]*)\\s+((?:@|\\b)[a-zA-Z_][a-zA-Z0-9_]*)",
                  "captures": {
                    "1": {
                      "name": "storage.type.metaforma"
                    },
                    "2": {
                      "name": "variable.parameter.metaforma"
                    }
                  }
                }
              ]
            }
          }
        },
        {
          "name": "keyword.other.preprocessor.metaforma",
          "match": "@#[0-9a-zA-Z_]+"
        },
        {
          "name": "constant.language.metaforma",
          "match": "(?<!@)\\b(false|nil|true)\\b"
        },
        {
          "name": "variable.other.metaforma",
          "match": "(?:@|\\b)[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.metaforma",
          "match": ".?[0-9][0-9a-zA-Z_.]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.metaforma",
          "match": "(?<![`~!@#$%^&*_=+|;:,<.>/?-])(&|=|:|!|&&|&&=|\\|\\||\\|\\|=|\\/|\\/=|==|>|>=|<|<=|-|-=|--|%|%=|\\*|\\*=|~|!=|\\||\\|=|\\+|\\+=|\\+\\+|\\?|\\^|\\^=)(?![`~!@#$%^&*_=+|;:,<.>/?-])"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.metaforma",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.metaforma",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.metaforma",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.metaforma",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.metaforma"
}